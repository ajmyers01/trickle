<div class="col-md-4 col-xs-8 col-md-offset-2 col-xs-offset-2">
  <div class="panel panel-login">
    <div class="panel-heading">
      <div class="row">
        <div class="col-xs-6">
          <a href="#" class="active" id="login-form-link">Login</a>
        </div>
        <div class="col-xs-6">
          <a href="#" id="register-form-link">I'm New</a>
        </div>
      </div>
      <hr>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-lg-12">
          <%= form_tag '/login',  id: "login-form", html: { style: "display: block;" } do %>
            <div class="form-group">
              <%= text_field_tag :email, nil, placeholder: "Email", class: "form-control", id: "username" %>
            </div>
            <div class="form-group">
              <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control", id: "password" %>
            </div>
            <div class="form-group">
              <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                  <%= submit_tag "Log In", class: "form-control btn btn-login", id: "login-submit" %></p>
                </div>
              </div>
            </div>
          <% end %>

          <%= form_for :user, url: '/users',html: { id: "register-form", style: "display: none;" } do |f| %>
            <div class="form-group">
              <%= f.text_field :name, placeholder: "Name", class: "form-control", id: "username" %>
            </div>
            <div class="form-group">
              <%= f.text_field :email, placeholder: "Email Address", class: "form-control", id: "email" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, placeholder: "Password", class: "form-control", id: "password" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control", id: "confirm-password" %>
            </div>
            <div class="form-group">
              <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                  <%= submit_tag "Let's Get Started", class: "form-control btn btn-register", id: "register-submit" %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
